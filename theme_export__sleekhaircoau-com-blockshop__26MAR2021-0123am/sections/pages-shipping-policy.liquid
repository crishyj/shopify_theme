{% stylesheet %}
	.off-canvas--viewport{
		min-height: auto !important;
	}

	.shopify-policy__container {
        max-width: 1157px;
  		margin: auto;
        margin-bottom: 50px;
    }	
	
	#accordion{		
    	margin-bottom: 50px !important;
	}

	.card-header{
		position: relative;
	}

	.collapseIcon{
		position: absolute;
		right: 10px;
        top: -10px;
        font-size: 40px;
	}

	#accordion .card{
		border: none;
	}

	#accordion .card-header{
		background: #fff;
		border: none;
		border-top: 1px solid #9554bc;
        margin-bottom: 0;
        padding: 26px 15px;
        border-radius: 0;
        font-weight: 600;
	}

	.collapseIcon{
		color:  #9554bc;
	}
  
  	.accordian_title
  	{
      font-weight: 600;
      padding-bottom: 15px;
	}
  	
  	.accordian_text{
  		padding-bottom: 15px;
  	}

	#accordion li{
		display: list-item;
    	list-style-type: circle;
	}
  

{% endstylesheet %}

{% javascript %}
	  $(".collapse").on('show.bs.collapse', function(){
        	$(this).prev(".card-header").find(".collapseIcon").text('+');
        }).on('hide.bs.collapse', function(){
        	$(this).prev(".card-header").find(".collapseIcon").text('-');
        });
{% endjavascript %}
